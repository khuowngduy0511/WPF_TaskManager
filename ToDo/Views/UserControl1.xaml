<Window x:Class="TodoListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Task" Height="350" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Add New Task" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Task Name:"/>
            <TextBox x:Name="TaskNameTextBox" Margin="0,0,0,10" Height="30"/>

            <TextBlock Text="Description:"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10" Height="60" AcceptsReturn="True"/>

            <TextBlock Text="Due Date:"/>
            <DatePicker x:Name="DueDatePicker" Margin="0,0,0,10"/>

            <Button Content="Add Task" Width="100" Click="AddTaskButton_Click"/>
        </StackPanel>
    </Grid>
</Window>