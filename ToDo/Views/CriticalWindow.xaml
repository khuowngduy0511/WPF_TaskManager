<Window x:Class="ToDo.Views.CriticalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Critical Tasks" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="279*"/>
            <ColumnDefinition Width="121*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Critical Tasks" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Margin="152,10,0,10" />

        <DataGrid Name="taskDataGrid" AutoGenerateColumns="False" 
                  Margin="10,10,10,10" ItemsSource="{Binding Tasks}" Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Task Title" Binding="{Binding TaskTitle}" Width="*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                <DataGridTextColumn Header="Due Day" Binding="{Binding DueDay}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Filter High Priority" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Bottom" 
        Margin="0,0,10,10" 
        Width="150" 
        Grid.ColumnSpan="2" 
        Command="{Binding FilterHighPriorityCommand}" />
    </Grid>
</Window>
