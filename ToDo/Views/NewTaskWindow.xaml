<Window x:Class="ToDo.Views.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo.Views"
        mc:Ignorable="d"
        Title="NewTaskWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Border Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Padding="20" Margin="10">
            <StackPanel>
                <TextBox Margin="0,0,0,10"/>
                <TextBox AcceptsReturn="True" Height="60" Text="" Margin="0,0,0,10" />

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox Width="300" />
                    <TextBlock Text="&#xf0ca;" FontFamily="FontAwesome" Margin="5,0,0,0" />
                </StackPanel>

                <TextBox AcceptsReturn="True" Height="100" Margin="0,0,0,10"/>

                <TextBlock Text="Due:" FontSize="14" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <ComboBox Width="100">
                        <ComboBoxItem Content="Select a date"/>
                        <ComboBoxItem Content="15"/>
                    </ComboBox>
                    <TextBox Width="40" Margin="5,0" MinWidth="30" MaxWidth="40" Text="9"/>
                    <TextBox Width="60" Margin="5,0" Text="00:00"/>
                    <ComboBox Width="50" Margin="5,0" >
                        <ComboBoxItem Content="AM"/>
                        <ComboBoxItem Content="PM"/>
                    </ComboBox>
                </StackPanel>

                <Button Content="Add Task" Background="{StaticResource Button.Complete}" Foreground="White" Padding="10,5" Margin="0,10,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
